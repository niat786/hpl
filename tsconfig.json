{
    "compilerOptions": {
      "allowJs": true,
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "declaration": true,
      "outDir": "./",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "removeComments": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  